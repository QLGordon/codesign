
<header class="container">
  <section class="row">
    <article class="col-05">
      <div class="content">
        <div id="logo-d">
          <span>c</span>
          <span>o</span>
          <span>d</span><br>
          <span>e</span>
          <span>s</span>
          <span>i</span><br>
          <span>g</span>
          <span>n</span>
          <span>∓</span>
        </div>
      </div>
    </article>
    <article class="col-10">
      <div class="content">
        <h1>Graphisme ∓ Web</h1>
        <h6>by QLGordon</h6>
      </div>
    </article>
    <article class="col-05">
      <nav class="content" >
        <i class="fab fa-facebook-square" style="color: <%= (@color.shuffle)[0] %>;"></i>
        <i class="fab fa-instagram" style="color: <%= (@color.shuffle)[0] %>;"></i>
        <i class="fab fa-behance-square" style="color: <%= (@color.shuffle)[0] %>;"></i>
        <i class="fab fa-twitter-square" style="color: <%= (@color.shuffle)[0] %>;"></i>
        <i class="fab fa-linkedin" style="color: <%= (@color.shuffle)[0] %>;"></i>
      </nav>
    </article>
  </section>
</header>

<main>
  <section class="container">

    <%= render 'hainet' %>
    <%= render 'diplomatie_solidaire' %>
    <%= render 'sibylline' %>
    <%= render 'mpp' %>

  </section>

</main>
<% 3.times do %>
  <section id="bg-graphic">
    <% graphics_1 = "⏌⎿⏋⎾" %>
    <% 18.times do %>
      <p id="graphic" class="<%= @font_size.sample %>"
      style="color: <%= (@color.shuffle)[0] %>;
      font-size: <%= @font_size.sample %>pt;
      transform: rotate(<%= @rotate.sample %>deg)
      translate(<%= @translate.sample %>pt, <%= @translate.sample %>pt);">
      <%= graphics_1.split("").sample %>
      </p>
    <% end %>
  </section>
<% end %>
