<main class="controller_project action_show">
  <% if current_user && current_user.email == "quentin.gourdon@gmail.com" %>
  <div style="position: fixed; top: 1em; left: 10em">



    <%= link_to edit_project_path(@project) do %>
    <i class="fas fa-edit"></i>
    <% end %>

    <%= link_to project_path(@project), :method => :delete do %>
    <i class="fas fa-trash-alt"></i>
    <% end %>
  </div>
  <% end %>

  <% if @project.client.svgs.first %>
  <img src="<%= @project.client.svgs.first.svg %>" alt="" class="logo" height="72pt" style=" position: fixed; top 1em; left: 1em">
  <% end %>

  <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 500 500" class="shuffle">
    <defs>
      <path d="M243.2, 382.4c-74.8,   
    0-135.5-60.7-135.5-135.5s60.7-135.5,135.5-135.5s135.5, 60.7, 135.5,
    135.5 S318, 382.4, 243.2, 382.4z" id="textcircle" />
      <style>
        text {
          font-size: 40px;
          font-family: Franklin Gothic, sans-serif;
          font-weight: 900;
          text-transform: uppercase;
          letter-spacing: 16px;
        }
      </style>
    </defs>
    <text dx="50">
      <textPath xlink:href="#textcircle">
        • <%= @project.title %> •
      </textPath>
    </text>
    </text>
  </svg>

  <h2>
    <% if  current_user.try(:email) == "quentin.gourdon@gmail.com"  %>
    <%= link_to "ajouter", new_project_work_path(@project), class: "btn btn-primary", style: "margin-left: 5em; " %>
    <% end %>
  </h2>

  <% @project.works.each do |work| %>
  <div>
    <section class="work">

      <% if  current_user.try(:email) == "quentin.gourdon@gmail.com"  %>

      <div style="position: relative; top: 1em; left: 14em; width: 10em;">
        <%= link_to edit_project_work_path(@project, work) do %>
        edit
        <% end %>

        <%= link_to project_work_path(@project, work), :method => :delete do %>
        delete

        <% end %>


        <% end %>
      </div>


      <% if work.images %>
      <div class="work_images">
        <% work.images.each do |image| %>
        <img src="<%= image.photo %>" alt="" class="w-100 border-bottom">
        <% end %>

        <% end %>
      </div>
      <% end %>
  </div>
  </section>

</main>