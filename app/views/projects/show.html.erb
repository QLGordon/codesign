<main id="project">
  <section class="container">
<!-- Section Project content -->
    <section class="row">
      <article class="col-sm-12 col-md-4">
        <div class="content-text">
          <% if @project.client.svgs.first %>
            <div class="svg">
                <img src= "<%= @project.client.svgs.first.svg %>"  alt="">
            </div>
          <% end %>
          <h3><%= @project.title %></h3>
          <span><%= @project.country %></span>
          <hr>
          <%= @project.description %>
          <br>
          <hr>
          <% if @project.works %>
          <h3>Réalisations</h3>
            <% @project.works.each do |work| %>
            <br>
              <p><%= work.title %></p>
              <span class="category"><%= work.category.name %> • <%= work.date.year %> | <%= work.city %></span>
            <br>
            <% end %>
          <% end %>
          <%= render 'colors/show' %>
        </div>
      </div>
    </article>

    <article class="col-sm-12 col-md-8">
      <div class="content-img">
        <% @project.photos.each do |photo|  %>
          <img src="<%= photo %>" alt="">
        <% end %>
      </div>
    </article>
  </section>
<%= render 'works/show' %>
<%= render 'works/edit' %>
  </section>
</main>
