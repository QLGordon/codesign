<%= simple_form_for(@project) do |f| %>

  <%= f.text_field :title, placeholder: "Titre", class: ["form-control"]%>
  <%= f.text_field :country, placeholder: "Pays", class: ["form-control"] %>
  <%= f.date_field :country, class: ["form-control"] %>
  <%= f.text_area :description, class: ["form-control"], rows: 10, value: markdown("description") %>
  <%= f.input :photo, class: "custom-file-input" %><%= f.input :photo_cache, as: :hidden, class: "custom-file-input" %>
  <%= collection_select(:project, :client_id, Client.all, :id, :name, prompt: 'choisir le client') %>

  <%= f.button :submit, "ok" %>

<% end %>
