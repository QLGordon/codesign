<main class="controller_project action_index">
  <h2>Quelques projets</h2>
  <section class="projects">

  <% @projects.shuffle.each do |project| %>
  <%= link_to project_path(project), style: "margin-bottom: 2em;" do  %>
    <article class="project">
      <h2>
      <% if project.client.svgs.first %>
      <img src="<%= project.client.svgs.first.svg %>" alt="" class="client-logo">
      <% end %>
        <span class="title"><%= project.title %></span>
        <span class="location"><%= project.country %></span>
      </h2>
      <img src="<%= project.photo %>" alt="" class="attachement">

      <%= markdown(project.description) %>

      <p>
        <% if project.works.count == 1 %>
        <span>en 1 point</span><br>
        <% elsif project.works.count > 1 %>
        <strong>en <%= project.works.count %> points</strong><br>
        <% project.works.each do |work| %>
        <strong>â€• <%= work.title %></strong>
        <% end %>
        <% else %>
        <% end %>
      </p>

    </article>
    <% end %>
  <% end %>

  </section>
</main>
