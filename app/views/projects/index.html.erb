<main id="projects">
  <section class="container">
    <section class="row">
    <% @projects.each do |project| %>
      <article class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
        <%= link_to project_path(project) do %>
        <% if project.photos? %>
            <div class="content-card" style=" background: url(
              <%= project.photos[0] %>);
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
              ">
              <% if project.category %>
        <h6><%= project.category.name %></h6>
              <% else %>
              <% end %>
        <% elsif project.client.svgs.first && project.svgs.first%>
          <div class="content-card">
            <% if project.category %>
            <h6><%= project.category.name %></h6>
            <%= svg project.svgs.first.svg %>
            <%= svg project.client.svgs.first.svg %>
            <% end %>
            <% else %>
        <% end %>
        <% if project.photos? || project.client.svgs.first && project.svgs.first %>

            <div class="infos">
              <h4><%= project.title %></h4>
              <p><%= project.description[0..250] + "..." %></p>
              <div class="colors" >
                <% if project.colors.first %>
              <% project.colors.each do |color| %>
                <div style="
                background: rgb(<%= color.red %>, <%= color.green %>, <%= color.blue %>);
                font-size: 24pt;
                "></div>
              <% end %>
                  <% else %>
                  <% project.client.colors.each do |color| %>
                    <div style="
                    background: rgb(<%= color.red %>, <%= color.green %>, <%= color.blue %>);
                    font-size: 24pt;
                    "></div>
                  <% end %>
                <% end %>
              </div>
              <h6><%= project.city %> â€¢ <%= project.country %> <br>
                <% if project.date %>
              <%= project.date.year %>
              <% end %></h6>
            </div>
        <% end %>
          </div>
        <% end %>
      </article>
    <% end %>
  </section>
</main>

