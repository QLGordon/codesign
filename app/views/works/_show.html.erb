<section id="work" class=" pt-5">
  <% @project.works.each do |work| %>
      <div id="<%= work.title %>" class="row border ml-0 mr-0">
        <h3 class="col text-right p-4 m-0 border"><%= work.title %></h3>
        <div class="col-8 p-4 border">
          <%= markdown work.description %>
        </div>
        <h6 class="col p-4 m-0 text-left border"><%= work.category.name %></h6>
      </div>

        <% work.images.each do |image| %>
          <% if image.photo.url.split('.').last == "svg" %>
          <div class="svg">
            <img class="border border-top-0" src="<%= image.photo %>" alt="">
          </div>
          <% elsif image.photo.url.split('.').last != "svg" %>
          <!-- TODO Add a hover height -->
          <img class="img-contain border-top-0" src="<%= image.photo %>" alt="">
          <% end %>
        <% end %>

  <% end %>

</section>
