<section id="work">
  <% @project.works.each do |work| %>
    <section class="row">
      <article id="work" class="col-sm-12 col-md-5">
        <h1><%= work.title %></h1>
        <p class="category"><%= work.category.name %></p>
      </article>
      <article id="work" class="col-sm-12 col-md-7 work-description">
        <p style=" font-size: 16pt;"><%= work.description %></p>
      </article>
    </section>

    <section class="row">
      <% work.photos.each do |photo| %>
        <article class="col-sm-12 col-md-4">
          <img src="<%= photo %>" alt="">
  <%#= render 'works/edit' %>
        </article>
      <% end %>
    </section>
  <% end %>
  <%#= render 'works/new' %>
</section>
