<section id="work">
  <% @project.works.each do |work| %>
    <section class="row">
      <article id="work" class="col-sm-12 col-md-5">
        <h1><%= work.title %></h1>
        <p class="category"><%= work.category.name %></p>
      </article>
      <article id="work" class="col-sm-12 col-md-7 work-description">
        <%= markdown work.description %>
      </article>
    </section>

    <section class="row">
      <% work.images.each do |image| %>
        <article class="col-sm-12 col-md-4">
          <img src="<%= image.photo %>" alt="">
  <%#= render 'works/edit' %>
        </article>
      <% end %>
    </section>
  <% end %>
  <%#= render 'works/new' %>
  <% if current_user && current_user.email == "quentin.gourdon@gmail.com" %>
        <%= link_to new_project_work_path(@project) do %>
  <div class="row">
    <div class="col-sm-12">
      <div class="large-button">
        <p>Ajouter un travail</p>
      </div>
    </div>
  </div>
  <% end %>
  <% end %>
</section>
