<%= simple_form_for [@project, @work] do |f| %>
<div class="container w-50">
  <%= f.input :title %>
  <%= f.input :date %>
  <%= f.input :city %>
  <%= f.input :description %>
  <% @images.each do |image| %>
  <img src="<%= image.photo %>" alt="" height="48 pt">
  <% end %>

  <%= f.fields_for :images do |image_field| %>
    <%= image_field.file_field :photo, :multiple => true, name: "images[photo][]" %>
    <%= image_field.check_box :_destroy %>
  <% end %>

  <%= f.button :submit %>
    <% end %>
