<main id="work" class="container head pt-5">
  <div class="border mb-5 w-75" style="margin: 0 auto">
    <div
      class="px-4 pt-3 d-flex border-bottom border-dark justify-content-between"
    >
      <div class="d-flex">
        <strong class="size-12">
          <%= link_to project_work_path(@project, @work) do %> <%= @work.title
          %> <% end %>
        </strong>
      </div>
      <div class="d-flex">
        <img
          src="https://res.cloudinary.com/dhp5qp6ol/image/upload/v1550161588/Skills/Ai.svg"
          alt=""
          height="24pt"
        />
      </div>
      <div class="d-flex align-right sm-legend align-self-center">
        <p>
          <span class="mr-1 blue"><%= @work.date.year %></span>
          <span class="mr-1 red"><%= @work.category.name %></span>
        </p>
      </div>
    </div>
    <div>
      <% @work.images.each do |image| %>
      <img src="<%= image.photo %>" alt="" class="w-100 border-bottom" />
      <% end %>
    </div>
    <div
      class="px-4 pt-3 d-flex border-bottom border-dark justify-content-between"
    >
      <div class="d-flex align-self-center">
        <strong class="size-12"
          ><i class="fas fa-info-circle"></i> plus d'infos</strong
        >
      </div>
      <div class="d-flex align-right sm-legend align-self-center">
        <p>
          <span class="mr-1 green"><%= @work.city %></span>
        </p>
      </div>
    </div>
    <div class="px-4 pt-3 d-flex justify-content-between">
      <div class="d-flex align-self-center">
        <% if @project.client.svgs.first %>
        <img src="<%= @project.client.svgs.first.svg %>" alt="" height="48pt" />
        <% end %>
      </div>
      <div class="align-left flex-grow-1">
        <strong>
          <%= link_to project_path(@project) do %> <%= @project.title %> <% end
          %>
        </strong>
        <br />
        <p class="sm-legend d-table">
          <span class="mr-1 blue"><%= @project.works.count %> missions</span>
        </p>
      </div>

      <div class="d-flex">
        <strong>
          <i class="fab fa-facebook-square"></i>
          <i class="fab fa-twitter-square"></i>
          <i class="fab fa-instagram"></i>
        </strong>
      </div>
    </div>
    <div class="px-4 pt-3 d-flex text-secondary justify-content-between">
      <div><%= markdown(@work.description) %></div>
    </div>
  </div>
</main>
