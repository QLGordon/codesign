#app {
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 0;
  position: relative;
  top: 15em;
  font-size: 1.5rem;
  padding-bottom: 50em;

  @keyframes fly {
    0% {
      transform: scale(1.05);
      opacity: 0;
    }
    50% {
      transform: scale(1.05);
      opacity: 0;
    }
  }
  @keyframes move {
    0% {
      transform: rotate(360deg);
    }
  }
  button {
    border: none;
    outline: none;
  }
  .background {
    height: 100vh;
    width: 100vw;
    position: fixed;
    top: 0;
    right: 0;
    z-index: -10;
    display: none;
    align-items: center;
    justify-content: center;

    #circle {
      font-size: 1em;
      height: 5em;
      width: 5em;
      border-radius: 2em;
      position: fixed;
      animation-name: move;
      animation-iteration-count: infinite;
      animation-timing-function: ease-in-out;
      mix-blend-mode: soft-light;
      box-shadow: 0em 0em 0em 0.0125em, 0em 0em 0em 0.02em white;
      &.teal {
        animation-duration: 4800ms;
        animation-delay: 500ms;
        color: rgba(100, 150, 250, 1);
        background: transparent;
        /* background: rgba(255,234,86,1); */
      }
      &.green {
        animation-duration: 4800ms;
        animation-delay: 750ms;
        color: rgba(250, 150, 100, 1);
        background: transparent;
        /* background: rgba(255,112,0,1); */
      }
    }
  }
  html {
    height: 100vh;
    width: 100vw;
    font-size: 2vmin;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: sans-serif;
    text-align: center;
    background: white;
  }
  body {
    display: flex;
    align-items: center;
  }

  #ipad {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;

    transition: all 750ms;

    box-shadow: 0em 0em 0em 0em rgba(20, 20, 20, 1),
      0em 0em 0em 0.5em rgba(255, 255, 255, 1), 1em 1em 2em rgba(0, 0, 0, 0.15),
      0.25em 0.25em 0.25em rgba(0, 0, 0, 1), 0em 0em 0.125em rgba(0, 0, 0, 0.5);
    border-radius: 2em;

    background: center center / cover no-repeat
      url(https://images.unsplash.com/photo-1579546929518-9e396f3cc809?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=3300&q=80)
      rgba(100, 150, 200, 1);

    width: 8em;
    height: 8em;

    animation: fly 1s alternate;
    font-size: 3em;
    i {
      font-size: 5em;
      transition: all 250ms;
      color: rgba(255, 255, 255, 1);
      border-radius: 0.5em;
      padding: 0.125em 0.25em;
      height: 2em;
      width: 2em;
      display: flex;
      justify-content: center;
      align-items: center;
    }
  }
  #ipad:active,
  #ipad:focus {
    transition: all 250ms;
    font-size: 4em;

    box-shadow: 0em 0em 0em 0.5em rgba(20, 20, 20, 1),
      0em 0em 0em 0.55em rgba(205, 205, 205, 1), 1em 1em 2em rgba(0, 0, 0, 0.5),
      0.5em 0.5em 0.5em rgba(0, 0, 0, 0.25),
      0.25em 0.25em 0.25em rgba(0, 0, 0, 0.25);
    background: center center / cover no-repeat
      url(https://images.unsplash.com/photo-1557683316-973673baf926?ixlib=rb-1.2.1&auto=format&fit=crop&w=3415&q=80)
      rgba(25, 25, 25, 1);
    border-radius: 0.5em;

    width: 12.9em;
    height: 11em;

    i {
      font-size: 1em;
      color: url(https://images.unsplash.com/photo-1579546929518-9e396f3cc809?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=3300&q=80);
      background: center center / cover no-repeat
        url(https://images.unsplash.com/photo-1579546929518-9e396f3cc809?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=3300&q=80)
        rgba(100, 150, 200, 1);
      color: white;
      transition: all 500ms;
      box-shadow: 0em 0em 0em 0em rgba(20, 20, 20, 1),
        0em 0em 0em 0.05em rgba(255, 255, 255, 1),
        0.5em 0.5em 1em rgba(0, 0, 0, 0.15),
        0.125em 0.125em 0.125em rgba(0, 0, 0, 0.25),
        0em 0em 0.125em rgba(0, 0, 0, 0.25);
    }
  }

  #ipad * {
    color: rgba(0, 0, 0, 0.4);
    user-select: none;
  }
  #ipad h6 {
    font-weight: lighter;
    border-top: solid 1em;
    padding-top: 1em;
  }
  #ipad p {
    color: white;
    font-weight: 700;
    font-size: 2em;
    transform: skew(-3deg, 0deg) rotate(-3deg) scale(1.5);
    border: 0em solid;
    border-radius: 0.25em;
    background: rgba(100, 150, 200, 1);
    padding: 0.25em 0.5em;
    border: 0.125em white solid;
    box-shadow: 0.25em 0.25em 0.25em rgba(0, 0, 0, 0.15),
      0em 0em 0.5em rgba(0, 0, 0, 0.15);
  }

  #ipad:active p,
  #ipad:focus p {
    color: white;
    padding: 1em 0.75em;
    transform: skew(-0deg, 0deg) rotate(-0deg) scale(0.25);
    border-radius: 1em;
  }

  #ipad:active .miniature,
  #ipad:focus .miniature {
    transition: 450ms;
    height: 3em;
    width: 3em;
    background: rgba(255, 255, 255, 1);
    border-radius: 0.25em;
    margin: 0.25em !important;
    box-shadow: 0.5em 0.5em 1em rgba(0, 0, 0, 0.15),
      0.25em 0.25em 0.25em rgba(0, 0, 0, 0.125),
      0.125em 0.125em 0.125em rgba(0, 0, 0, 0.125);
  }
  #ipad:active img,
  #ipad:focus img {
    height: 100%;
    width: 100%;
  }
  #ipad:active span,
  #ipad:focus span {
    opacity: 1;
    transition: 250ms 450ms;
  }

  .miniatures {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .miniatures .miniature {
    height: 3em;
    width: 3em;
    /* overflow: hidden; */
    background: rgba(255, 255, 255, 0);
    margin: 0em !important;
    overflow: hidden;
    box-shadow: 0em 0em 0em rgba(0, 0, 0, 0), 0em 0em 0em rgba(0, 0, 0, 0),
      0em 0em 0em rgba(0, 0, 0, 0);
  }
  .miniatures .miniature img {
    transition: all 250ms;
    height: 0%;
    width: 0%;
  }
  span {
    box-shadow: 0.5em 0.5em 1em rgba(0, 0, 0, 0.15),
      0.25em 0.25em 0.25em rgba(0, 0, 0, 0.125),
      0.125em 0.125em 0.125em rgba(0, 0, 0, 0.125);
    /* transition: 150ms; */
    padding: 1em 0em;
    position: absolute;
    bottom: -20em;
    z-index: 0;
    background: white;
    text-align: center;
    font-size: 12px;
    width: inherit;
  }
}

@keyframes appears {
  0% {
    transform: translateY(10em) rotate(-11deg);
    opacity: 0;
  }
  50% {
    transform: translateY(10em) rotate(-11deg);
    opacity: 0;
  }
  55% {
    transform: translateY(10em) rotate(11deg);
    opacity: 1;
  }
}

#about {
  display: flex;
  flex-direction: column;
  .intro {
    background: white;
    box-shadow: 0em 0.75em 1em rgba(0, 0, 0, 0.125);
    border-radius: 4em;
    overflow: hidden;
    margin: auto;
    margin-top: 5em;
    width: 100%;
    justify-content: center;
    align-items: center;
    padding-bottom: 12em;
    h1 {
      font-size: 30pt;
      text-align: left;
      padding-left: 18rem;
    }
    &::before,
    &::after {
      content: "";
      height: 144em;
      width: 144em;
      position: fixed;
      z-index: -1;
      border-radius: 72em 70em 70em 70em;
    }
    @keyframes appears {
      from {
        transform: rotate(1turn);
      }
    }
    &::before {
      animation: appears 30s linear infinite;
      top: 48em;
      left: 48em;
      background: linear-gradient(#e0e2cb, #f3df70);
    }
    &::after {
      animation: appears 30s linear infinite;
      bottom: 48em;
      right: 48em;
      background: linear-gradient(#f5cccc, #9ba1eb);
    }

    .text-justify {
      max-width: 60em;
      margin: auto;
      background: white;
      padding: 1em;
      column-count: 2;
      column-gap: 5em;
    }
  }
  position: relative;
  .rounded-circle.shadow.me {
    border-radius: 11em;
    height: 10em;
    width: 10em;
    top: 6em;
    left: 2em;
    border: 0.5em white solid;
    position: absolute;
    box-shadow: 0em 0.75em 1em rgba(0, 0, 0, 0.125),
      inset 0em 0em 0em 0.25em white,
      inset 0em 0em 1em 0.5em rgba(0, 0, 0, 0.125);
  }
  table {
    background: white;
    margin-top: 3em;
    border-radius: 3em;
    box-shadow: 0em 0.75em 1em rgba(0, 0, 0, 0.125),
      0em -0.125em 0.5em rgba(0, 0, 0, 0.05);
    h2 {
      margin: 0;
    }
    tbody tr th {
      padding: 3em;
      border-radius: 3em 3em 0em 0em;
      box-shadow: 0em 0.125em 3em rgba(0, 0, 0, 0.125);
    }
    tbody tr td[valign="middle"] {
      padding-right: 2em;
      padding-left: 3em;
      vertical-align: baseline;
    }
  }
  .grid_clients {
    padding-top: 10em;
    padding-bottom: 10em;
    h2 {
      position: absolute;
      transform: translateY(-2em);
    }

    justify-content: center;
    display: grid;
    grid-template-columns: repeat(auto-fill, 10em);
    grid-gap: 2em;
    div {
      display: flex;
      justify-content: center;
      img {
        object-fit: cover;
        border-radius: 1em;
        background: white;
        box-shadow: 0em 0.75em 1em rgba(0, 0, 0, 0.125),
          0em -0.125em 0.5em rgba(0, 0, 0, 0.05), 0em 0em 0em 0.25em white;
      }
    }
  }
}
