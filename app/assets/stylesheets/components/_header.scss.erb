header {
  position: absolute;
  .social-media {
    &::after {
      content: "";
      height: 1em;
      width: 1em;
      border-radius: 1em 1em 1em 1em;
      background-color: navy;
      display: inline;
      position: absolute;
      top: 50%;
      left: -1.5em;
      margin-right: 2em;
      transform: translateY(-50%);
      transition: left 150ms, opacity 150ms, border-radius 150ms;
      z-index: 0;
      box-shadow: 0em 0em 0em 0.25em white, 0em 0.75em 1em rgba(0, 0, 0, 0.125),
        0em -0.125em 0.5em rgba(0, 0, 0, 0.05);
    }
    &:hover {
      right: 0em;
      a {
        transform: translateX(0em);
        transition: transform 250ms;
      }
      &::after {
        left: 0em;
        opacity: 0;
        border-radius: 1em 0em 0em 1em;
      }
    }
    transition: right 250ms;
    position: fixed;
    bottom: 1.5em;
    right: -3.5em;
    background: white;
    padding-right: 0.5em;
    border-radius: 1em 0em 0em 1em;
    box-shadow: 0em 0.75em 1em rgba(0, 0, 0, 0.125),
      0em -0.125em 0.5em rgba(0, 0, 0, 0.05);
    a {
      &:first-of-type {
        transition: transform 250ms 50ms;
      }

      &:nth-of-type(2) {
        transition: transform 250ms 100ms;
      }
      &:last-of-type {
        transition: transform 250ms 150ms;
      }

      transform: translateX(5em);
      height: 48px;
      width: 48px;
      display: flex;
      align-items: center;
      justify-content: center;
      i {
        font-size: 28px;
      }
    }
  }
  .navigation {
    &:hover {
      left: 0em;
    }
    transition: left 250ms;
    position: fixed;
    top: 1.5em;
    left: -3.5em;
    background: white;
    padding-left: 0.5em;
    border-radius: 0em 1em 1em 0em;
    box-shadow: 0em 0.75em 1em rgba(0, 0, 0, 0.125),
      0em -0.125em 0.5em rgba(0, 0, 0, 0.05);
    a {
      height: 48px;
      width: 48px;
      display: flex;
      align-items: center;
      justify-content: center;
      i {
        font-size: 28px;
      }
    }
  }
  .punch-line {
    width: 20em;
    margin: auto;
    padding-top: 0.5em;
    text-align: center;
  }
}

.head {
  margin-top: 72pt;
  padding-top: 9pt;
}
