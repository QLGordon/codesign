@keyframes cursor {
  0% {
    transform: scale(0);
  }

  100% {
    transform: scale(0.9);
  }
}

@keyframes pump {
  0% {
    transform: scale(0.9);
  }

  100% {
    transform: scale(1.05);
  }
}

body,
html {
  position: fixed;
  margin: 0;
  height: 100vh;
  width: 100vw;
  overflow: auto;
}

#edit {
  position: absolute;
  bottom: -36pt;
  right: 12pt;
}

/* width */
::-webkit-scrollbar {
  width: 0pt;
  height: 0pt;
}

/* Track */
::-webkit-scrollbar-track {
  background: transparent;
}

/* Handle */
::-webkit-scrollbar-thumb {
  background: transparent;
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
  background: transparent;
}

