}
#child {
  width: 12em;
  height: 12em;
  object-fit: cover;
  border-radius: 10em;
  border: white 1em;
  transform: translate(0em, -1em);
  box-shadow:
  0em 0em 0em .5em rgba(255,255,255,1),
  1em 1em 1em rgba(0,0,0,.15),
  .25em .25em .5em rgba(0,0,0,.25);
}
