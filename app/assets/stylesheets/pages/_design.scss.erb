#design{
  #legend{
    display: flex;
    align-items: center;
    justify-content: center;
    svg{
      height: 10em;
      position: absolute;
      transform: translate(-20em, 20em);
      &:first-child{
        fill: rgba(250, 150, 100, 1);
      }
      &:last-child{
        transform: translate(20em, 30em);
        fill: rgba(50, 200, 100, 1);
      }
    }
  }
  #app {
    height: 25em;
  }
  height: 100vh;
  width: 100vw;
  .intro {
    position: relative;
    z-index: 10;
    margin-top: -10em;
  }
  h1{
    margin: 7em 7em 0em 7em;
    color: rgba(0,0,0,.75);
    strong{
      font-size: 1em;
      color: rgba(100, 150, 250, 1);
      &:last-child{
        color: rgba(250, 150, 100, 1);
      }
      &.tonic-1{color: rgba(250, 150, 100, 1);}
      &.tonic-2{color: rgba(50, 200, 100, 1);}
    }
    a {
      position: absolute;
      display: block;
      right: 15em;
      margin-top: .25em;
      border-top: .125em solid;
      font-size: .5em;
    }
  }
}
