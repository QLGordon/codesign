.me {
}
#table {
  td { margin: 12pt; padding: 12pt;}
}
.intro {
  border: 9pt solid darkblue;
  h1 {
    font-weight: bolder;
    box-shadow: 0pt -5pt 0pt 0pt inset darksalmon;
    color: rgba(0,0,0,.6);
    margin-bottom: 72pt;
  }
  a {
    color: darksalmon;
    font-weight: bolder;
    box-shadow: 0pt -6pt 0pt -5pt inset darksalmon, 0pt -15pt 0pt 0pt inset antiquewhite;
    &:hover {
      transition: box-shadow 350ms;
      text-decoration: none;
      color: rgba(0,0,0,.5);
      box-shadow: 0pt -10pt 0pt 0pt inset darksalmon, 0pt -15pt 0pt 0pt inset antiquewhite;
    }
  }
  mark {
    color: rgba(0,0,0,.6);
    background: none;
    font-weight: bolder;
    box-shadow: 0pt -15pt 0pt 0pt inset antiquewhite;
  }
  abbr {
    box-shadow: 0pt -6pt 0pt -5pt inset antiquewhite, 0pt -15pt 0pt 0pt inset antiquewhite;
    text-decoration: none;
    font-weight: bolder;
    &:hover {
      transition: box-shadow 350ms;
      box-shadow: 0pt -10pt 0pt 0pt inset darksalmon;
    }
  }
  p {
    color: rgba(0,0,0,.6);
    line-height: 24pt;
    margin-bottom: 48pt;
    padding: 0pt 48pt;
  }
}
