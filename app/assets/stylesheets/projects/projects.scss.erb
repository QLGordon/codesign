.banner {
  width: 100%;
  height: 100vh;
  top: 0pt;
  object-fit: cover;
  position: relative;
}
.a-b-left {
  position: absolute;
  left: 48pt;
  bottom: 48pt;
}
.a-b-right {
  position: absolute;
  right: 48pt;
  bottom: 48pt;
}
.a-t-right {
  position: absolute;
  right: 48pt;
  top: 48pt;
}
.a-t-left {
  position: absolute;
  left: 48pt;
  top: 48pt;
}

.img-contain {
  width: 100%;;
  object-fit: contain;
}

.couleur {
  display: inline-block;
  margin: 3pt 0pt;
  padding: 3pt 6pt;
  font-weight: bolder;
}
.shadow-boxes {
  box-shadow: 0pt 3pt 3pt rgba(0,0,0,.15);
}
