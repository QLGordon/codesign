@keyframes infinite_rotate {
  to {
    transform: rotate(1turn);
  }
}

.edit_project,
.new_project {
  margin: 10em;

  img {
    height: 200px;
  }
}

.shuffle {
  position: fixed;
  right: -4em;
  top: -4em;
  height: 24em;
  width: 24em;
  z-index: -10;
  border: 0.5em solid black;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  transform: rotate(0turn);
  animation: infinite_rotate 60s infinite linear;
}

.controller_project {
  font-size: calc(9px + 0.5vmax);
  height: 100vh;
  width: 100vw;

  &.action_show {
    @import "work";
    display: flex;
    height: 100vh;
    width: 100vw;
    top: 0;
    left: 0;
    position: absolute;
  }

  &.action_index {
    @import "project";
    height: 100vh;
    width: 100vw;
    top: 0;
    left: 0;
    position: absolute;

  }
}