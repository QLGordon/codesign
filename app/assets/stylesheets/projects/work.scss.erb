 nav {
   position: absolute;

   a {
     margin: 48px;
     height: 48px;
     width: 48px;
     background: red;
     display: inline-flex;

     &.add {
       position: relative;
       left: 20em;
       z-index: 1000;

     }
   }
 }

 .work {
   overflow-y: auto;
   height: 100vh;
   width: 100vw;
   display: flex;
   top: 0;
   left: 0;
   position: relative;



   ::-webkit-scrollbar {
     width: 0pt;
     height: 0pt;
   }
 }

 .work_images {
   display: flex;
   width: auto;
   height: 100%;
   align-items: center;


   img {
     margin: 5em;
     transition: transform 450ms 150ms, box-shadow 450ms 150ms;
     transform: scale(0.5) translateY(0em);
     box-shadow: 0em 0em 0em 1px white, 0em 1em 0em 5em white,
       0em 3em 3em 5em rgba(0, 0, 0, 0.1);
     will-change: transform, box-shadow;
     object-fit: contain;
     max-height: 90vh;
     max-width: 90vw;
     top: 0em;

     &:hover {
       transform: scale(1) translateY(-1em);
       box-shadow: 0em 0em 0em 1px rgba(225, 225, 225, 1),
         0em 0em 0em 8px rgba(255, 255, 255, 1),
         0em 0.75em 3em 9px rgba(0, 0, 0, 0.05);
     }

     background: white;
   }
 }